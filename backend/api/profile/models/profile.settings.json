{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "profiles",
  "info": {
    "name": "profile"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "firstName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30,
      "required": false
    },
    "lastName": {
      "type": "string",
      "required": false,
      "minLength": 2,
      "maxLength": 30
    },
    "birthday": {
      "type": "date",
      "required": false
    },
    "bio": {
      "type": "richtext",
      "maxLength": 150,
      "minLength": 1
    },
    "exercises": {
      "collection": "exercise"
    },
    "coach": {
      "type": "boolean",
      "default": false
    },
    "hsAthlete": {
      "type": "boolean",
      "default": false
    },
    "collegeAthlete": {
      "type": "boolean",
      "default": false
    },
    "bodybuilder": {
      "type": "boolean",
      "default": false
    },
    "powerlifter": {
      "type": "boolean",
      "default": false
    },
    "olylifter": {
      "type": "boolean",
      "default": false
    },
    "crossfitter": {
      "type": "boolean",
      "default": false
    },
    "personalTrainer": {
      "type": "boolean",
      "default": false
    },
    "coachOrTrainer": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "athletes"
    },
    "noneOfTheAbove": {
      "type": "boolean",
      "default": false
    }
  }
}
